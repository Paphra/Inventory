extends layout

block navigation

block content 
  .containear
    .row
      .col-md-4
      .col-md-4.card.shadow(style="margin:0")
        .logo.card-header
          img(src='/img/logo.png')
          h3.signin-header Login
        form.forma-signin.card-body(action='/login' method='post')
          .form-group
            input#username.form-control(
              type="text" placeholder='Username' 
              name='username' required='true' 
              autofocus='true')
            input#password.form-control(
              type="password" placeholder='Password' 
              name='password' required='true')
          input#login.btn.btn-primary.btn-block(
            type="submit" value='Login')
        .errors
          if errors
            ul
              each err in errors
                li= err.msg
        p.btn.btn-default.btn-block.text-center For A Pasword Reset, Contact the Admin
      
      .col-md-4
        
block footer